<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="单词"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et"
        android:hint="备注"
        tools:ignore="MissingConstraints"></EditText>


    <Button
        android:id="@+id/zengjia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="增加数据"
        app:layout_constraintTop_toBottomOf="@+id/et2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/shanchu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除数据"
        app:layout_constraintTop_toBottomOf="@+id/zengjia"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/genggai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更改数据"
        app:layout_constraintTop_toBottomOf="@+id/shanchu"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/chaxun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询数据"
        app:layout_constraintTop_toBottomOf="@+id/genggai"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/chongzhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重置输入"
        app:layout_constraintTop_toBottomOf="@+id/chaxun"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>